{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile",
            "command": "bash.exe",
            "type": "process",
            "args": [
                "--login",
                "-c",
                "clang main.c -Wall -Wextra -pedantic -Wno-unused -g -ggdb -O0"
            ],
            "problemMatcher": [
                "$tsc"
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "PATH": "C:\\msys64\\usr\\bin\\",
                    "CHERE_INVOKING": "1",
                    "MSYSTEM": "UCRT64"
                },
                "includePath": [
                    "C:\\msys64\\ucrt64\\include"
                ],
            }
        }
    ]
}